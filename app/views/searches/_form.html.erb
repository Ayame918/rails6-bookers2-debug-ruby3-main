<% if user_signed_in? %>
      <%#フォームを作成 search_pathに対してGETメソッドでフォームのデータを送信%>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%#検索キーワードを入力するためのテキストフィールドを表示 :contentは検索キーワードのパラメータ名を指定%>
    <%= f.text_field :content %>
      <%#検索対象のモデルを選択するためのプルダウンメニューを表示%>
    <%= f.select :model, options_for_select({"User" => "user", "Book" => "book"}) %>
      <%#検索方法を選択するためのプルダウンメニューを表示　:modelは選択したモデルのパラメータ名を指定　options_for_selectは選択肢のハッシュを受け取り、プルダウンメニューを作る%>
    <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
      <%#検索ボタンを表示%>
    <%= f.submit "検索" %>
  <% end %>
<% end %>